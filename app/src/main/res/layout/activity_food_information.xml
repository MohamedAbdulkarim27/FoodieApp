<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayItemInfo">

        <TextView
            android:id="@+id/expandFood_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textStyle="italic"
            android:textColor="@android:color/holo_purple"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/expandFood_image"
            android:layout_centerHorizontal="true"
            android:layout_height="250dp"
            android:layout_width="250dp"
            android:layout_below="@id/expandFood_title"
            />

        <TextView
            android:id="@+id/expandFood_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding"
            android:textSize="24sp"
            android:textColor="@color/purple_200"
            android:layout_below="@id/expandFood_image"/>

        <TextView
            android:id="@+id/expandFood_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding"
            android:textSize="24sp"
            android:textColor="@color/purple_500"
            android:layout_below="@id/expandFood_description"/>

        <TextView
            android:id="@+id/expandFood_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding"
            android:textSize="24sp"
            android:textColor="@color/purple_700"
            android:layout_below="@id/expandFood_ingredients"/>


        <TextView
            android:id="@+id/expandFood_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding"
            android:onClick="openLink"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/expandFood_calories"/>

<Button
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
    android:text="Go Back"
    android:layout_alignParentBottom="true"
    />
    </RelativeLayout>
</ScrollView>